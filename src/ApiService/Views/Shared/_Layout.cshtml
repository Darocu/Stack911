<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cincinnati Unified Safety Toolkit API</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Content/HomePage.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<nav class="custom-navbar">
    <div class="container">
        <div class="navbar-header">
            @Html.ActionLink("Cincinnati Unified Safety Toolkit  API", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
    </div>
</nav>
<div class="container body-content">
    @RenderBody()
    @if (!IsSectionDefined("CustomFooter"))
    {
        <footer>
            <p>&copy; @DateTime.Now.Year - Cincinnati Unified Safety Toolkit. All rights reserved.</p>
        </footer>
    }
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>